<!--pages/messageShow/messageShow.wxml-->
<view class="messageContainer">
<view class="messageItem" wx:for="{{message}}" wx:key="item" bindtap="tapMessage">

<view class="title">
<image class="messageImg" src="/images/fail.png"></image>
<view class="messageInfo">
<view class="userName">小王</view>
<view class="date">{{item.date}}</view>
</view>

</view>

<text class="messageText">{{item.Text}}</text>
<view class="messagePhotoContainer"> 
<view class="messagePhotoItem" wx:for="{{item.imageSrc}}" wx:key="item">
<image src="" class="messagePhoto" src="{{item}}"></image>
</view>
</view>

<view class="subtitle">

<view class="actionContainer">
<image class="actionPhoto" src="/images/share2.png"></image>
<text class="actionText">分享</text>
</view>
<view class="actionContainer">
<image class="actionPhoto" src="/images/comment.png"></image>
<text class="actionText">评论</text>
</view>
<view class="actionContainer">
<image class="actionPhoto" src="/images/likes.png"></image>
<text class="actionText">点赞</text>
</view>
</view>
</view>
</view>
<van-tabs class= color="#00c758">
<van-tab title="点赞">

</van-tab>
<van-tab title="评论">
<view class="commentItem">
<view class="commentContainer">
<image class="commentImg" src="/images/fail.png"></image>
<view class="commentInfo">
<view class="commentName">小李</view>
<view class="commentDate">2020-6-17</view>
</view>
</view>
<text class="commentText"></text>
</view>
</van-tab>
</van-tabs>
<view></view>
