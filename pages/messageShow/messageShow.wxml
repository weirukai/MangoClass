<!--pages/messageShow/messageShow.wxml-->
<view class="messageContainer">
<view class="messageItem" >
<view class="title">
<!-- master的头像 -->
<image class="messageImg" src=""></image>
<view class="messageInfo">
<view class="userName">{{masterName}}</view>
<view class="userSchool">{{masterSchool}}</view>
</view>
<view class="date">{{joinTime}}</view>
</view>

<text class="messageText">{{content}}</text>
<view class="messagePhotoContainer"> 
<view class="messagePhotoItem" wx:for="{{postImages}}" wx:key="item">
<image src="" class="messagePhoto" src="{{item}}"></image>
</view>
</view>

<view class="subtitle">

<view class="actionContainer">
<image class="actionPhoto" src="/images/share2.png"></image>
<text class="actionText">分享</text>
</view>
<view class="actionContainer">
<image class="actionPhoto" src="/images/comment.png"></image>
<text class="actionText">评论</text>
</view>
<view class="actionContainer">
<image class="actionPhoto" src="/images/likes.png"></image>
<text class="actionText">点赞</text>
</view>
</view>
</view>
</view>
<view class="commentItem" wx:for="{{postComments}}" wx:key="item">
<view class="commentContainer">
<image class="commentImg" src=''></image>
<view class="commentInfo">
<view class="commentName">{{item.data.nickName}}</view>
<view class="commentDate">{{item.data.joinTime}}</view>
</view>
</view>
<text class="commentText">{{item.data.content}}</text>
</view>



<view   wx:if="{{!showInput}}"   class="docommentsCon">
<input class="writeCom" bindinput="getInputValue" bindfocus="focused"></input>
<image class="writeImage" src="/images/editGreen.png"></image>
<view class="writeComButton" bindtap="doComment"><view style="text-align:center">发送</view>
</view>
</view>

<view wx:if="{{showInput}}" class='inputBottom' style='bottom:{{inputBottom}}px'>
<input type='text' class='textInput' value='{{inputText}}' placeholder-class='textInputPlaceHolder' placeholder='输入你想要说的...' bindinput='getInputText' bindfocus="foucus" bindblur="blur" bindconfirm='submit' adjust-position='{{false}}'></input>
<text bindtap='submit' class='submit'>发送</text>
</view>

<view class="docommentsCon">
<input class="writeCom" bindinput="getInputValue"></input>
<image class="writeImage" src="/images/editGreen.png"></image>
<view class="writeComButton" bindtap="doComment"><view style="text-align:center">发送</view></view>
</view>

