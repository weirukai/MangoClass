/* pages/messageShow/messageShow.wxss */
.messageContainer{
  display: flex;
  flex-direction: column;
  background-color :#eee;
  }
  
  .messageItem{
    background-color: #fff;
   
    display: flex;
    flex-direction: column;
    border-bottom: 20rpx solid #eee;
    padding: 10rpx;
  }
  
  .title{
    display: flex;
    flex-direction: row;
    border-bottom: 20rpx solid #fff;
  }
  
  
  .messageImg{
    max-height: 150rpx;
    max-width: 150rpx;
    border-radius: 50%;
    border: 1rpx  solid #eee;
    }
  
  
    .messageInfo{
      padding-left: 60rpx;
      display: flex;
      flex-direction: column;
    }

.infoItem{
  min-height: 50rpx;
}

    .userName{
      font-size: 35rpx;
      margin-bottom: 5rpx
    }

  
    .date{
      font-size: 30rpx;
      color: rgb(127, 126, 126);
      
    }
  
    .messageText{
      word-break: keep-all;
      word-wrap: break-word;
      padding-top: 20rpx;
      min-height: 100rpx;
      
    }
    .messagePhotoContainer{
    display: flex;
    flex-direction: row;
    border-bottom: 5rpx solid #eee;
    min-height: 100rpx;
    }
    .messagePhotoItem{
      padding: 10rpx;
    }
  
    .messagePhoto{
     max-width: 200rpx;
     max-height: 200rpx;
     border-radius: 10rpx;
    }
    .subtitle{
      display: flex;
     flex-direction: row;
     
    }
  
    .actionContainer{
      display: flex;
      flex-direction: column;
      margin: auto;
    }
  
  
    .actionPhoto{
      max-width: 40rpx;
      max-height: 40rpx;
      margin: auto;
    }
    .actionText{
      font-size: 30rpx;
      color: #808080;
      margin: auto;
    }
    
    .commentContainer{
      display: flex;
      flex-direction: row;
      padding-left: 20rpx;
    }

    .commentImg{
      max-height: 70rpx;
      max-width: 70rpx;
    }

    .commentInfo{
      padding-left: 20rpx;
      display: flex;
      flex-direction: column;
    }

    .commentName{
      font-size: 30rpx;
      margin-bottom: 5rpx
    }

    .commentDate{
      font-size: 25rpx;
    color: rgb(127, 126, 126);
    }
    .commentText{
      padding-bottom: 10rpx;
      word-break: keep-all;
      word-wrap: break-word;
    }

    .commentItem{
    display: flex;
    flex-direction: column;
    border-bottom: 5rpx solid #eee;
    }

    .docommentsCon{
      position: fixed;
      bottom: 0rpx;
      width: 750rpx;
      height: 100rpx;
      background-color: #fff;
    }
    .docommentsCon2{
      position: fixed;
      bottom: 0rpx;
      width: 750rpx;
      height: 200rpx;
      background-color: #fff;
      border-top: 1rpx solid #eee;
    }
    .writeCom{
      width: 500rpx;
      height: 60rpx;
      border: 2rpx solid #eee;
      background-color: #fff;
      border-radius: 100rpx;
      position: absolute;
      top: 20rpx;
      left: 20rpx;  
    }
    .writeCom2{
      width: 500rpx;
      height: 120rpx;
      border: 2rpx solid #eee;
      background-color: #eee;
      border-radius: 80rpx;
      margin-left: 40rpx;
      margin-top: 30rpx;
    }





    .writeImage{
      max-width: 50rpx;
      max-height: 50rpx;
      position: absolute;
      top: 25rpx;
      left: 40rpx;
    
    }
    .writeComButton{
      position: absolute;
      top: 20rpx;
      right: 30rpx;
      height: 60rpx;
      width: 130rpx;
      background-color: #00c758;
      border-radius: 20rpx;
      padding-top: 10rpx;
    
    }
    .writeComButton2{
      position: absolute;
      top: 60rpx;
      right: 30rpx;
      height: 60rpx;
      width: 130rpx;
      background-color: #00c758;
      border-radius: 20rpx;
      padding-top: 10rpx;
    
    }


    .commentTitle{
       margin: auto;
    }
    .inputBottom{

      width: 100%;
      
      position: fixed;
      
      left: 0rpx;
      
      bottom: 0rpx;
      
      background: #fff;
      
      height: 200rpx;
      
      box-sizing: border-box;
      
      padding: 18rpx 10rpx;
      
      }
      
      .inputBottom .textInput{
      
      /* border-bottom: 2rpx solid #000; */
      
      display: inline-block;
      height: 120rpx;
      border:2rpx solid #eee;
      border-radius: 30rpx;
      width: 80%;
      margin-top: 20rpx;
      background-color: #eee;
      }
      
      .inputBottom .textInputPlaceHolder{
      
      font-size: 30rpx;
      
      }
      
      .inputBottom .submit{
      
      font-size: 18px;
      
      display: inline-block;
      
      text-align: center;
      margin-top: 50rpx;
    
      margin-right: 20rpx;
      background: #00c758;
      border-radius: 10rpx;
      color: #fff;
      padding: 2rpx 8rpx;
      
      }
   
