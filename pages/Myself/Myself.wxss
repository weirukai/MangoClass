.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding-top: 2rpx;
} 
.bgImage{
max-width: 750rpx;
max-height: 300rpx;
position: absolute;
top: 0rpx;
}
.userInfoOut{

  width: 750rpx;
  height: 300rpx;
  display: flex;
}
.userInfo{
  display: flex;
  flex-direction: row;
  margin: auto;
  border-radius:30rpx ;
  box-shadow: -8px -1px 10px 2px #eee,8px -1px 10px 2px #eee,-8px 1px 10px 2px #eee,8px -1px 10px 2px #eee ;
}
.detailInfo{
display: flex;
flex-direction: column;
width: max-content;
border-radius: 20rpx;
}
.infoItem{
display: flex;
flex-direction: row;
padding-bottom: 10rpx;
}
.infoItemImage{
  max-width: 25px;
  max-height:25px ;
  
}
.infoItemText{
  padding-left: 20rpx;

}
.userImage{
height: 160rpx;
width: 160rpx;
border-radius: 50%;
border: 2px solid #00c758;
background-size: cover;
margin-top:30rpx ;
}
.userId{
font-size: 20px;

}
.login{
padding-top: 12rpx;
height: inherit;
padding-left: 60rpx;
}
.loginNow{

position: absolute;
left: 350rpx;
top: 50rpx;
text-align: center;
