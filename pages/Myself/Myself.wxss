}

.userinfoStr{
height: inherit;
width: inherit;
}

.studyStatus{
  font-size: 20px;
  display: flex; 
  border-top:5rpx solid  rgba(237, 237, 237, 0.546);
  height: 150rpx;
  width: 750rpx;
  flex-direction: row;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
  box-shadow: -3px -1px 4px 0px #00c758;
}

.statusItem{
padding-top: 20rpx;
padding-bottom: 20rpx;
