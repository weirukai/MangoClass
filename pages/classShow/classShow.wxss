/* pages/classShow/classShow.wxss */
.classContainer{
width: 750rpx;
border-bottom: 3rpx solid #eee;
}
.othersContainer{
  display: flex;
  flex-direction: column;
}
.videoContainer{
  width: 750rpx;
}
.video{
width: 750rpx;
}
.actions{
  width: 750rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
}
.imageContainer{
  display: flex;
  min-width: 187rpx;
  flex-direction: column;
}
.actionImage{
  max-width: 60rpx;
  max-height: 60rpx;
  margin: auto;
}
.actionCount{
  margin: auto;
  font-size: 12px;
  color: #808080;
}
.commentsContainer{
  width: 750rpx;
  display: flex;
  flex-direction: column;
}
.commentItem{
display: flex;
flex-direction: row;
min-height: 130rpx;
align-items: center;
}
.commentItemImage{
  max-height: 100rpx;
  max-width: 100rpx;
  border-radius: 50%;
  border: 2rpx solid #00c758;
}
.content{
display: flex;
flex-direction: column;
margin-left: 30rpx;
width: 650rpx;
border-bottom: 3rpx solid #eee;
}
.info{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.infoContainer{
display: flex;
flex-direction: row;
min-height: 100rpx;
width: 750rpx;
}

.infoItem{
  display: flex;
  flex-direction: row;
  min-height: 80rpx;
  align-items: center;
}

.infoItemImage{
  margin-left: 10rpx;
  max-height: 50rpx;
  max-width: 50rpx;
}
.infoText{
  margin-left: 30rpx;
}

.docommentsCon{
  position: fixed;
  bottom: 0rpx;
  width: 750rpx;
  height: 100rpx;
  background-color: #eee;
}
.writeCom{
  width: 500rpx;
  height: 60rpx;
  border: 2rpx solid #808080;
  background-color: #fff;
  border-radius: 100rpx;
  position: absolute;
  top: 20rpx;
  left: 20rpx;


}
.writeImage{
  max-width: 50rpx;
  max-height: 50rpx;
  position: absolute;
  top: 25rpx;
  left: 40rpx;

}
.writeComButton{
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  height: 60rpx;
  width: 130rpx;
  background-color: #00c758;
  border-radius: 20rpx;
  padding-top: 10rpx;

}